platform :ios, '14.0'

ENV['FLUTTER_APPLICATION_PATH'] ||= File.expand_path('..', __dir__)
ENV['FLUTTER_ROOT'] ||= `which flutter`.strip.split("/bin").first

load File.join(ENV['FLUTTER_ROOT'], 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  install_all_flutter_pods(ENV['FLUTTER_APPLICATION_PATH'])
end
